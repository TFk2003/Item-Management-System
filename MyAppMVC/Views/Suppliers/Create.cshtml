@model MyAppMVC.Models.Supplier

@{
    ViewData["Title"] = "Create Supplier";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4><i class="bi bi-plus-circle"></i> Create New Supplier</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="CompanyName" class="form-label">
                                        <i class="bi bi-building"></i> Company Name *
                                    </label>
                                    <input asp-for="CompanyName" class="form-control" placeholder="Enter company name" required />
                                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="ContactPerson" class="form-label">
                                        <i class="bi bi-person"></i> Contact Person
                                    </label>
                                    <input asp-for="ContactPerson" class="form-control" placeholder="Contact name" />
                                    <span asp-validation-for="ContactPerson" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">
                                        <i class="bi bi-envelope"></i> Email Address *
                                    </label>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="supplier@company.com" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label">
                                        <i class="bi bi-telephone"></i> Phone Number *
                                    </label>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="+1-555-123-4567" required />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">
                                <i class="bi bi-geo-alt"></i> Address
                            </label>
                            <textarea asp-for="Address" class="form-control" rows="2" placeholder="Full company address"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Supplier
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Preview Card -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5><i class="bi bi-eye"></i> Preview</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="border rounded p-3">
                                <h6>Supplier Card Preview</h6>
                                <div class="d-flex align-items-center mt-2">
                                    <div class="supplier-preview-icon me-3">
                                        <i class="bi bi-building fs-4 text-primary"></i>
                                    </div>
                                    <div>
                                        <strong id="previewCompany">New Company</strong><br>
                                        <small class="text-muted" id="previewContact">Contact: -</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="border rounded p-3">
                                <h6>Contact Information</h6>
                                <p class="mb-1"><i class="bi bi-envelope"></i> <span id="previewEmail">email@company.com</span></p>
                                <p class="mb-0"><i class="bi bi-telephone"></i> <span id="previewPhone">+1-555-123-4567</span></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Live preview
            $('#CompanyName').on('input', function() {
                $('#previewCompany').text($(this).val() || 'New Company');
            });

            $('#ContactPerson').on('input', function() {
                const contact = $(this).val() || '-';
                $('#previewContact').text('Contact: ' + contact);
            });

            $('#Email').on('input', function() {
                $('#previewEmail').text($(this).val() || 'email@company.com');
            });

            $('#PhoneNumber').on('input', function() {
                $('#previewPhone').text($(this).val() || '+1-555-123-4567');
            });

            // Form validation
            $('.needs-validation').on('submit', function(event) {
                if (!this.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                $(this).addClass('was-validated');
            });
        });
    </script>

    <style>
        .supplier-preview-icon {
            width: 40px;
            height: 40px;
            background-color: #f8f9fa;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
}