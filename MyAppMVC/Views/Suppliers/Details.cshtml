@model MyAppMVC.Models.Supplier

@{
    ViewData["Title"] = "Supplier Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4><i class="bi bi-eye"></i> Supplier Details</h4>
                    <span class="badge bg-light text-dark">ID: @Model.Id</span>
                </div>
                <div class="card-body">
                    <!-- Header Info -->
                    <div class="d-flex align-items-center mb-4">
                        <div class="supplier-detail-icon me-3">
                            <i class="bi bi-building fs-2 text-primary"></i>
                        </div>
                        <div>
                            <h2 class="mb-0">@Model.CompanyName</h2>
                            <p class="text-muted mb-0">
                                <i class="bi bi-calendar"></i> Added on @Model.CreatedDate.ToString("MMMM dd, yyyy")
                            </p>
                        </div>
                    </div>

                    <!-- Details Grid -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6><i class="bi bi-info-circle"></i> Contact Information</h6>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-4">Company Name</dt>
                                        <dd class="col-sm-8">@Model.CompanyName</dd>

                                        <dt class="col-sm-4">Contact Person</dt>
                                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.ContactPerson) ? "-" : Model.ContactPerson)</dd>

                                        <dt class="col-sm-4">Email</dt>
                                        <dd class="col-sm-8">
                                            <a href="mailto:@Model.Email" class="text-decoration-none">
                                                <i class="bi bi-envelope"></i> @Model.Email
                                            </a>
                                        </dd>

                                        <dt class="col-sm-4">Phone</dt>
                                        <dd class="col-sm-8">
                                            <a href="tel:@Model.PhoneNumber" class="text-decoration-none">
                                                <i class="bi bi-telephone"></i> @Model.PhoneNumber
                                            </a>
                                        </dd>

                                        <dt class="col-sm-4">Address</dt>
                                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Address) ? "-" : Model.Address)</dd>

                                        <dt class="col-sm-4">Status</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                                @(Model.IsActive ? "Active" : "Inactive")
                                            </span>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6><i class="bi bi-bar-chart"></i> Statistics</h6>
                                </div>
                                <div class="card-body">
                                    <div class="text-center py-3">
                                        <h1 class="display-3 text-info">@(Model.Items?.Count ?? 0)</h1>
                                        <p class="text-muted">Items Supplied</p>
                                    </div>

                                    <div class="row text-center">
                                        <div class="col-6">
                                            <div class="p-2">
                                                <h3 class="text-success">@(Model.PurchaseOrders?.Count ?? 0)</h3>
                                                <small>Purchase Orders</small>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="p-2">
                                                <h3 class="text-warning">
                                                    @if (Model.PurchaseOrders?.Any() == true)
                                                    {
                                                        <span>@Model.PurchaseOrders.Count(po => po.Status == "Pending")</span>
                                                    }
                                                    else
                                                    {
                                                        <span>0</span>
                                                    }
                                                </h3>
                                                <small>Pending Orders</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Recent Items (if any) -->
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6><i class="bi bi-box"></i> Supplied Items</h6>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Item Name</th>
                                                <th>SKU</th>
                                                <th>Price</th>
                                                <th>Stock</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Items.Take(5))
                                            {
                                                <tr>
                                                    <td>@item.Name</td>
                                                    <td>@(item.SKU ?? "-")</td>
                                                    <td>@item.Price.ToString("C")</td>
                                                    <td>
                                                        <span class="badge @(item.StockQuantity > 10 ? "bg-success" : "bg-warning")">
                                                            @item.StockQuantity
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">
                                                            @(item.IsActive ? "Active" : "Inactive")
                                                        </span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                @if (Model.Items.Count > 5)
                                {
                                    <div class="text-center mt-2">
                                        <a asp-controller="Item" asp-action="Index" class="btn btn-sm btn-outline-info">
                                            View All @Model.Items.Count Items
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- Recent Purchase Orders (if any) -->
                    @if (Model.PurchaseOrders != null && Model.PurchaseOrders.Any())
                    {
                        <div class="card">
                            <div class="card-header">
                                <h6><i class="bi bi-cart"></i> Recent Purchase Orders</h6>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Order #</th>
                                                <th>Date</th>
                                                <th>Status</th>
                                                <th>Amount</th>
                                                <th>Delivery</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var order in Model.PurchaseOrders.OrderByDescending(po => po.OrderDate).Take(5))
                                            {
                                                <tr>
                                                    <td>@order.OrderNumber</td>
                                                    <td>@order.OrderDate.ToString("MMM dd")</td>
                                                    <td>
                                                        <span class="badge @GetStatusBadgeClass(order.Status)">
                                                            @order.Status
                                                        </span>
                                                    </td>
                                                    <td>@order.TotalAmount.ToString("C")</td>
                                                    <td>
                                                        @if (order.ExpectedDeliveryDate.HasValue)
                                                        {
                                                            <small>@order.ExpectedDeliveryDate.Value.ToString("MMM dd")</small>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary">Not set</span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                @if (Model.PurchaseOrders.Count > 5)
                                {
                                    <div class="text-center mt-2">
                                        <a asp-controller="PurchaseOrder" asp-action="Index" class="btn btn-sm btn-outline-info">
                                            View All @Model.PurchaseOrders.Count Orders
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Suppliers
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit Supplier
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status.ToLower() switch
        {
            "pending" => "bg-warning",
            "shipped" => "bg-info",
            "delivered" => "bg-success",
            "cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

<style>
    .supplier-detail-icon {
        width: 60px;
        height: 60px;
        background-color: #f8f9fa;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>