@model MyAppMVC.Models.PurchaseOrder

@{
    ViewData["Title"] = "Purchase Order Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4><i class="bi bi-eye"></i> Purchase Order Details</h4>
                    <div>
                        <span class="badge bg-light text-dark me-2">ID: @Model.Id</span>
                        <span class="badge @GetStatusBadgeClass(Model.Status)">@Model.Status</span>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Order Header -->
                    <div class="row mb-4">
                        <div class="col-md-8">
                            <h2>@Model.OrderNumber</h2>
                            <p class="text-muted">
                                <i class="bi bi-calendar"></i> Ordered on @Model.OrderDate.ToString("MMMM dd, yyyy") |
                                @if (Model.ExpectedDeliveryDate.HasValue)
                                {
                                    <i class="bi bi-truck"></i>
                                    <span class="@(Model.ExpectedDeliveryDate.Value < DateTime.Now && Model.Status != "Delivered" ? "text-danger" : "text-success")">
                                        Expected: @Model.ExpectedDeliveryDate.Value.ToString("MMMM dd, yyyy")
                                    </span>
                                }
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <h3 class="text-success">@Model.TotalAmount.ToString("C")</h3>
                            <small class="text-muted">Total Order Value</small>
                        </div>
                    </div>

                    <!-- Supplier Information -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5><i class="bi bi-truck"></i> Supplier Information</h5>
                        </div>
                        <div class="card-body">
                            @if (Model.Supplier != null)
                            {
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6>@Model.Supplier.CompanyName</h6>
                                        <p class="mb-1">
                                            <i class="bi bi-person"></i> @(Model.Supplier.ContactPerson ?? "No contact person")
                                        </p>
                                        <p class="mb-1">
                                            <i class="bi bi-envelope"></i>
                                            <a href="mailto:@Model.Supplier.Email" class="text-decoration-none">@Model.Supplier.Email</a>
                                        </p>
                                        <p class="mb-0">
                                            <i class="bi bi-telephone"></i>
                                            <a href="tel:@Model.Supplier.PhoneNumber" class="text-decoration-none">@Model.Supplier.PhoneNumber</a>
                                        </p>
                                    </div>
                                    <div class="col-md-6">
                                        @if (!string.IsNullOrEmpty(Model.Supplier.Address))
                                        {
                                            <h6>Address</h6>
                                            <p class="mb-0">@Model.Supplier.Address</p>
                                        }
                                    </div>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted mb-0">No supplier information available</p>
                            }
                        </div>
                    </div>

                    <!-- Order Timeline -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5><i class="bi bi-clock-history"></i> Order Timeline</h5>
                        </div>
                        <div class="card-body">
                            <div class="timeline">
                                <div class="timeline-item @(Model.Status != "Cancelled" ? "active" : "")">
                                    <div class="timeline-marker @(Model.Status != "Cancelled" ? "bg-success" : "bg-secondary")"></div>
                                    <div class="timeline-content">
                                        <h6>Order Created</h6>
                                        <p class="text-muted">@Model.OrderDate.ToString("MMM dd, yyyy HH:mm")</p>
                                    </div>
                                </div>

                                @if (Model.Status == "Shipped" || Model.Status == "Delivered")
                                {
                                    <div class="timeline-item active">
                                        <div class="timeline-marker bg-info"></div>
                                        <div class="timeline-content">
                                            <h6>Shipped</h6>
                                            <p class="text-muted">Order was shipped to supplier</p>
                                        </div>
                                    </div>
                                }

                                @if (Model.Status == "Delivered" && Model.ActualDeliveryDate.HasValue)
                                {
                                    <div class="timeline-item active">
                                        <div class="timeline-marker bg-success"></div>
                                        <div class="timeline-content">
                                            <h6>Delivered</h6>
                                            <p class="text-muted">@Model.ActualDeliveryDate.Value.ToString("MMM dd, yyyy HH:mm")</p>
                                        </div>
                                    </div>
                                }

                                @if (Model.Status == "Cancelled")
                                {
                                    <div class="timeline-item">
                                        <div class="timeline-marker bg-danger"></div>
                                        <div class="timeline-content">
                                            <h6>Cancelled</h6>
                                            <p class="text-muted">Order was cancelled</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Order Items -->
                    @if (Model.PurchaseOrderItems != null && Model.PurchaseOrderItems.Any())
                    {
                        <div class="card mb-4">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5><i class="bi bi-cart-check"></i> Order Items</h5>
                                <span class="badge bg-primary">@Model.PurchaseOrderItems.Count items</span>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Item</th>
                                                <th>SKU</th>
                                                <th>Quantity</th>
                                                <th>Unit Price</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.PurchaseOrderItems)
                                            {
                                                <tr>
                                                    <td>
                                                        @if (item.Item != null)
                                                        {
                                                            <strong>@item.Item.Name</strong>
                                                            @if (!string.IsNullOrEmpty(item.Item.Description))
                                                            {
                                                                <br>
                                                                <small class="text-muted">@item.Item.Description.Truncate(50)</small>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">Item not found</span>
                                                        }
                                                    </td>
                                                    <td>@(item.Item?.SKU ?? "-")</td>
                                                    <td>
                                                        <span class="badge bg-primary">@item.Quantity</span>
                                                    </td>
                                                    <td>@item.UnitPrice.ToString("C")</td>
                                                    <td class="fw-bold">@item.TotalPrice.ToString("C")</td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot class="table-dark">
                                            <tr>
                                                <td colspan="4" class="text-end"><strong>Subtotal:</strong></td>
                                                <td><strong>@Model.PurchaseOrderItems.Sum(i => i.Quantity * i.UnitPrice).ToString("C")</strong></td>
                                            </tr>
                                            <tr>
                                                <td colspan="4" class="text-end"><strong>Tax (10%):</strong></td>
                                                <td><strong>@(((decimal)Model.PurchaseOrderItems.Sum(i => i.Quantity * i.UnitPrice)) * 0.10m).ToString("C")</strong></td>
                                            </tr>
                                            <tr>
                                                <td colspan="4" class="text-end"><strong>Grand Total:</strong></td>
                                                <td><strong>@Model.TotalAmount.ToString("C")</strong></td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Orders
                        </a>
                        <div>
                            @if (Model.Status == "Pending")
                            {
                                <button class="btn btn-success" onclick="updateStatus('Shipped')">
                                    <i class="bi bi-truck"></i> Mark as Shipped
                                </button>
                            }
                            else if (Model.Status == "Shipped")
                            {
                                <button class="btn btn-success" onclick="updateStatus('Delivered')">
                                    <i class="bi bi-check-circle"></i> Mark as Delivered
                                </button>
                            }
                            @if(Model.Status != "Delivered")
                            {
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                    <i class="bi bi-pencil"></i> Edit Order
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status.ToLower() switch
        {
            "pending" => "bg-warning",
            "shipped" => "bg-info",
            "delivered" => "bg-success",
            "cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

@section Scripts {
    <script>
        function updateStatus(newStatus) {
            if (confirm(`Mark this order as ${newStatus}?`)) {
                // In real app, make AJAX call to update status
                toastr.success(`Order marked as ${newStatus}`);
                setTimeout(() => {
                    window.location.reload();
                }, 1000);
            }
        }
    </script>

    <style>
        .timeline {
            position: relative;
            padding-left: 30px;
        }

            .timeline:before {
                content: '';
                position: absolute;
                left: 15px;
                top: 0;
                bottom: 0;
                width: 2px;
                background-color: #e9ecef;
            }

        .timeline-item {
            position: relative;
            margin-bottom: 20px;
        }

            .timeline-item.active .timeline-marker {
                background-color: #0d6efd;
            }

        .timeline-marker {
            position: absolute;
            left: -23px;
            top: 0;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background-color: #6c757d;
        }

        .timeline-content {
            padding-left: 10px;
        }
    </style>
}