@model IEnumerable<MyAppMVC.Models.PurchaseOrder>

@{
    ViewData["Title"] = "Purchase Orders";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1><i class="bi bi-cart-check"></i> Purchase Orders</h1>
            <p class="text-muted">Manage your purchase orders and supplier orders</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Order
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Statistics -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Total Orders</h6>
                            <h2 class="card-text">@Model.Count()</h2>
                        </div>
                        <i class="bi bi-cart fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Pending</h6>
                            <h2 class="card-text">@Model.Count(po => po.Status == "Pending")</h2>
                        </div>
                        <i class="bi bi-clock fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Delivered</h6>
                            <h2 class="card-text">@Model.Count(po => po.Status == "Delivered")</h2>
                        </div>
                        <i class="bi bi-check-circle fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Total Value</h6>
                            <h2 class="card-text">@Model.Sum(po => po.TotalAmount).ToString("C")</h2>
                        </div>
                        <i class="bi bi-cash-stack fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" id="searchInput" class="form-control" placeholder="Search by order number or supplier...">
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select" id="statusFilter">
                        <option value="">All Status</option>
                        <option value="Pending">Pending</option>
                        <option value="Shipped">Shipped</option>
                        <option value="Delivered">Delivered</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <input type="date" class="form-control" id="dateFilter" placeholder="Filter by date">
                </div>
                <div class="col-md-2">
                    <button class="btn btn-outline-secondary w-100" onclick="resetFilters()">
                        <i class="bi bi-x-circle"></i> Clear
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Purchase Orders Table -->
    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="purchaseOrdersTable">
                        <thead class="table-light">
                            <tr>
                                <th>Order #</th>
                                <th>Supplier</th>
                                <th>Order Date</th>
                                <th>Expected</th>
                                <th>Status</th>
                                <th>Items</th>
                                <th>Total Amount</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr class="order-row" data-status="@order.Status.ToLower()">
                                    <td>
                                        <strong>@order.OrderNumber</strong><br>
                                        <small class="text-muted">ID: @order.Id</small>
                                    </td>
                                    <td>
                                        @if (order.Supplier != null)
                                        {
                                            <div>
                                                <strong>@order.Supplier.CompanyName</strong><br>
                                                <small class="text-muted">@order.Supplier.ContactPerson</small>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <small>@order.OrderDate.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        @if (order.ExpectedDeliveryDate.HasValue)
                                        {
                                            <small class="@(order.ExpectedDeliveryDate.Value < DateTime.Now && order.Status != "Delivered" ? "text-danger" : "")">
                                                @order.ExpectedDeliveryDate.Value.ToString("MMM dd")
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Not set</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(order.Status)">
                                            @order.Status
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@(order.PurchaseOrderItems?.Count ?? 0)</span>
                                    </td>
                                    <td class="fw-bold">@order.TotalAmount.ToString("C")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@order.Id"
                                               class="btn btn-outline-info" data-bs-toggle="tooltip" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if(order.Status != "Delivered")
                                            {
                                                <a asp-action="Edit" asp-route-id="@order.Id"
                                                   class="btn btn-outline-primary" data-bs-toggle="tooltip" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            }
                                            @if (order.Status == "Pending")
                                            {
                                                <button class="btn btn-outline-success"
                                                        onclick="markAsShipped(@order.Id)"
                                                        data-bs-toggle="tooltip" title="Mark as Shipped">
                                                    <i class="bi bi-truck"></i>
                                                </button>
                                            }
                                            else if (order.Status == "Shipped")
                                            {
                                                <button class="btn btn-outline-success"
                                                        onclick="markAsDelivered(@order.Id)"
                                                        data-bs-toggle="tooltip" title="Mark as Delivered">
                                                    <i class="bi bi-check-circle"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-cart display-1 text-muted"></i>
                    <h3 class="mt-3">No purchase orders found</h3>
                    <p class="text-muted">Create your first purchase order to get started</p>
                    <a asp-action="Create" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle"></i> Create Order
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status.ToLower() switch
        {
            "pending" => "bg-warning",
            "shipped" => "bg-info",
            "delivered" => "bg-success",
            "cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Initialize DataTable
            $('#purchaseOrdersTable').DataTable({
                pageLength: 25,
                order: [[2, 'desc']], // Sort by order date descending
                columnDefs: [
                    { orderable: false, targets: [7] } // Disable sorting for actions column
                ]
            });

            // Search functionality
            $('#searchInput').on('keyup', function() {
                const searchText = $(this).val().toLowerCase();
                $('#purchaseOrdersTable tbody tr').each(function() {
                    const rowText = $(this).text().toLowerCase();
                    $(this).toggle(rowText.indexOf(searchText) > -1);
                });
            });

            // Status filter
            $('#statusFilter').change(function() {
                const filterValue = $(this).val().toLowerCase();
                if (filterValue === '') {
                    $('#purchaseOrdersTable tbody tr').show();
                } else {
                    $('#purchaseOrdersTable tbody tr').each(function() {
                        const rowStatus = $(this).data('status');
                        $(this).toggle(rowStatus === filterValue);
                    });
                }
            });
        });

        function markAsShipped(orderId) {
            if (confirm('Mark this order as shipped?')) {
                // In real app, make AJAX call to update status
                toastr.success('Order marked as shipped');
                setTimeout(() => {
                    window.location.reload();
                }, 1000);
            }
        }

        function markAsDelivered(orderId) {
            if (confirm('Mark this order as delivered?')) {
                // In real app, make AJAX call to update status
                toastr.success('Order marked as delivered');
                setTimeout(() => {
                    window.location.reload();
                }, 1000);
            }
        }

        function resetFilters() {
            $('#searchInput').val('');
            $('#statusFilter').val('');
            $('#dateFilter').val('');
            $('#purchaseOrdersTable tbody tr').show();
        }
    </script>

    <style>
        .table-hover tbody tr:hover {
            background-color: rgba(13, 110, 253, 0.1);
        }

        .btn-group .btn {
            border-radius: 4px !important;
            margin: 0 2px;
        }
    </style>
}