@model MyAppMVC.Models.PurchaseOrder

@{
    ViewData["Title"] = "Delete Purchase Order";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="bi bi-exclamation-triangle"></i> Delete Purchase Order</h4>
                </div>
                <div class="card-body">
                    <!-- Warning Alert -->
                    <div class="alert alert-danger">
                        <h5><i class="bi bi-exclamation-octagon"></i> Warning!</h5>
                        <p class="mb-0">You are about to delete a purchase order. This action cannot be undone.</p>
                    </div>

                    <!-- Order Info -->
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <h5 class="mb-0">@Model.OrderNumber</h5>
                                    <small class="text-muted">ID: @Model.Id | Ordered: @Model.OrderDate.ToString("MMM dd, yyyy")</small>
                                </div>
                                <span class="badge @GetStatusBadgeClass(Model.Status)">@Model.Status</span>
                            </div>

                            <dl class="row mb-0">
                                <dt class="col-sm-4">Supplier</dt>
                                <dd class="col-sm-8">@(Model.Supplier?.CompanyName ?? "No supplier")</dd>

                                <dt class="col-sm-4">Total Amount</dt>
                                <dd class="col-sm-8 fw-bold text-danger">@Model.TotalAmount.ToString("C")</dd>

                                <dt class="col-sm-4">Expected Delivery</dt>
                                <dd class="col-sm-8">
                                    @if (Model.ExpectedDeliveryDate.HasValue)
                                    {
                                        <span>@Model.ExpectedDeliveryDate.Value.ToString("MMM dd, yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not set</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Items Count</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@(Model.PurchaseOrderItems?.Count ?? 0)</span>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Impact Warning -->
                    <div class="alert alert-warning">
                        <h6><i class="bi bi-info-circle"></i> Impact Analysis</h6>
                        <ul class="mb-0">
                            <li>This purchase order will be permanently deleted</li>
                            <li>No stock will be adjusted (if order was delivered)</li>
                            <li>Financial records may need to be updated separately</li>
                            <li>Consider cancelling instead of deleting if order is pending</li>
                        </ul>
                    </div>

                    <!-- Delete Form -->
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-shield-check"></i> Confirm Deletion
                            </label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                                <label class="form-check-label" for="confirmDelete">
                                    I understand that this action cannot be undone
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Reason for Deletion</label>
                            <select class="form-select" id="reasonSelect">
                                <option value="">-- Select Reason --</option>
                                <option value="duplicate">Duplicate Order</option>
                                <option value="cancelled">Supplier Cancelled</option>
                                <option value="error">Data Entry Error</option>
                                <option value="other">Other Reason</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger" id="deleteBtn" disabled>
                                <i class="bi bi-trash"></i> Delete Purchase Order
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status.ToLower() switch
        {
            "pending" => "bg-warning",
            "shipped" => "bg-info",
            "delivered" => "bg-success",
            "cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Enable delete button only when confirmed
            $('#confirmDelete').change(function() {
                $('#deleteBtn').prop('disabled', !$(this).is(':checked'));
            });

            // Double-check before submitting
            $('#deleteBtn').click(function(e) {
                if (!confirm('Are you absolutely sure you want to delete this purchase order?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}