@model IEnumerable<MyAppMVC.Models.Item>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	ViewData["Title"] = "Items";
}

<div class="container-fluid">
	<div class="d-flex justify-content-between align-items-center mb-4">
		<div>
			<h1><i class="bi bi-box"></i> Items</h1>
			<p class="text-muted">Manage items for your inventory</p>
		</div>
		<a asp-action="Create" class="btn btn-primary">
			<i class="bi bi-plus-circle"></i> Add New Item
		</a>
	</div>

	<div class="card mb-4">
		<div class="card-body">
			<div class="row">
				<div class="col-md-8">
					<div class="input-group">
						<span class="input-group-text"><i class="bi bi-search"></i></span>
						<input type="text" id="searchInput" class="form-control" placeholder="Search items..." />
						<button class="btn btn-outline-secondary" type="button" id="clearSearch">
							Clear
						</button>
					</div>
				</div>

				<div class="col-md-4">
					<select id="statusFilter" class="form-select">
						<option value="">All Statuses</option>
						<option value="True">Active</option>
						<option value="False">Inactive</option>
					</select>
				</div>
			</div>
		</div>
	</div>

	<div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                     <table class="table table-hover" id="itemsTable">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    <a href="#" class="sort-link" data-sort="name">
                                        <i class="bi bi-arrow-down-up sort-icon"></i> @Html.DisplayNameFor(model => model.Name)
                                    </a>
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    <a href="#" class="sort-link" data-sort="price">
                                        <i class="bi bi-arrow-down-up sort-icon"></i> @Html.DisplayNameFor(model => model.Price)
                                    </a>
                                </th>
                                <th>
                                    <a href="#" class="sort-link" data-sort="stock">
                                        <i class="bi bi-arrow-down-up sort-icon"></i> @Html.DisplayNameFor(model => model.StockQuantity)
                                    </a>
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ReorderLevel)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SKU)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Manufacturer)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Supplier)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Category)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SerialNumber)
                                </th>
                                <th>
                                    <a href="#" class="sort-link" data-sort="status">
                                        <i class="bi bi-arrow-down-up sort-icon"></i> Status
                                    </a>
                                </th>
                                <th>
                                    <a href="#" class="sort-link" data-sort="created">
                                        <i class="bi bi-arrow-down-up sort-icon"></i> Created
                                    </a>
                                </th>
                                <th>
                                    <a href="#" class="sort-link" data-sort="updated">
                                        <i class="bi bi-arrow-down-up sort-icon"></i> Updated
                                    </a>
                                </th>
                                <th>Clients Count</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="category-row" data-status="@item.IsActive.ToString().ToLower()"
                                    data-name="@item.Name"
                                    data-price="@item.Price"
                                    data-stock="@item.StockQuantity"
                                    data-created="@item.CreatedDate.Ticks"
                                    data-updated="@(item.LastUpdated?.Ticks ?? 0)">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="category-color me-2" style="background-color: @GetCategoryColor(item.Id); width: 12px; height: 12px; border-radius: 50%;"></div>
                                            <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                                        </div>
                                    </td>
                                    <td class="text-truncate" style="max-width: 250px;" title="@item.Description">
                                        @(string.IsNullOrEmpty(item.Description) ? "-" : item.Description)
                                    </td>
                                    <td>$@item.Price.ToString("N2")</td>
                                    <td>@item.StockQuantity</td>
                                    <td>@item.ReorderLevel</td>
                                    <td>@item.SKU</td>
                                    <td>@item.Manufacturer</td>
                                    <td>@item.Supplier?.CompanyName</td>
                                    <td>@item.Category?.Name</td>
                                    <td>@item.SerialNumber?.SerialCode</td>
                                    <td>
                                        <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">
                                            @(item.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @item.CreatedDate.ToString("MMM dd, yyyy")
                                        </small>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @item.LastUpdated?.ToString("MMM dd, yyyy")
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@(item.ItemClients?.Count ?? 0) clients</span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-outline-primary" data-bs-toggle="tooltip" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-outline-info" data-bs-toggle="tooltip" title="Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="ItemHistory" asp-controller="Transaction" asp-route-id="@item.Id"
                                               class="btn btn-outline-success" data-bs-toggle="tooltip" title="History">
                                                <i class="bi bi-clock-history"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-outline-danger" data-bs-toggle="tooltip" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div>
                        <span class="text-muted">
                            Showing <strong>@Model.Count()</strong> items
                        </span>
                    </div>
                    <div>
                        <span class="badge bg-success">@Model.Count(c => c.IsActive) Active</span>
                        <span class="badge bg-secondary ms-2">@Model.Count(c => !c.IsActive) Inactive</span>
                    </div>
                </div>
}
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-tags display-1 text-muted"></i>
                    <h3 class="mt-3">No items found</h3>
                    <p class="text-muted">Get started by creating your first item</p>
                    <a asp-action="Create" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle"></i> Create Item
                    </a>
                </div>
            }
        </div>
    </div>
</div>
@functions {
    string GetCategoryColor(int id)
    {
        var colors = new[] { "#3498db", "#2ecc71", "#e74c3c", "#f39c12", "#9b59b6", "#1abc9c", "#d35400", "#34495e" };
        return colors[id % colors.Length];
    }
}

@section Scripts {
    <script>
        $(document).ready(function() {
            let sortOrder = {};

            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Search functionality
            $('#searchInput').on('keyup', function() {
                var searchText = $(this).val().toLowerCase();
                $('.category-row').each(function() {
                    var rowText = $(this).text().toLowerCase();
                    $(this).toggle(rowText.indexOf(searchText) > -1);
                });
            });

            // Clear search
            $('#clearSearch').click(function() {
                $('#searchInput').val('');
                $('.category-row').show();
            });

            // Status filter
            $('#statusFilter').change(function() {
                var filterValue = $(this).val();
                if (filterValue === '') {
                    $('.category-row').show();
                } else {
                    var boolFilter = (filterValue.toLowerCase() === 'true');
                    $('.category-row').each(function() {
                        var rowStatus = $(this).data('status');
                        $(this).toggle(rowStatus === boolFilter);
                    });
                }
            });

            // Simple sorting (you can enhance this with AJAX for server-side sorting)
            // Sorting functionality
            $('.sort-link').click(function(e) {
                e.preventDefault();

                const column = $(this).data('sort');
                console.log(column)
                const $tbody = $('#itemsTable tbody');
                const rows = $tbody.find('tr.category-row').toArray();
                console.log("sorting")
                // Initialize sort order for this column if not exists
                if (!sortOrder[column]) {
                    sortOrder[column] = 'asc';
                } else {
                    // Toggle sort order
                    sortOrder[column] = sortOrder[column] === 'asc' ? 'desc' : 'asc';
                }

                const isAscending = sortOrder[column] === 'asc';

                // Update sort icons
                $('.sort-link i').removeClass('bi-arrow-up bi-arrow-down').addClass('bi-arrow-down-up');
                $(this).find('i').removeClass('bi-arrow-down-up')
                    .addClass(isAscending ? 'bi-arrow-up' : 'bi-arrow-down');

                // Sort the rows
                rows.sort(function(a, b) {
                    let aValue, bValue;
                    console.log("sorting")
                    console.log(column)
                    switch(column) {
                        case 'name':
                            aValue = $(a).data('name').toLowerCase();
                            bValue = $(b).data('name').toLowerCase();
                            console.log(aValue)
                            console.log(bValue)
                            break;
                        case 'price':
                            aValue = parseFloat($(a).data('price'));
                            bValue = parseFloat($(b).data('price'));
                            break;
                        case 'stock':
                            aValue = parseInt($(a).data('stock'));
                            bValue = parseInt($(b).data('stock'));
                            break;
                        case 'status':
                            aValue = $(a).data('status') === true ? 1 : 0;
                            bValue = $(b).data('status') === true ? 1 : 0;
                            break;
                        case 'created':
                            aValue = parseInt($(a).data('created'));
                            bValue = parseInt($(b).data('created'));
                            break;
                        case 'updated':
                            aValue = parseInt($(a).data('updated'));
                            bValue = parseInt($(b).data('updated'));
                            break;
                        default:
                            return 0;
                    }

                    if (aValue < bValue) return isAscending ? -1 : 1;
                    if (aValue > bValue) return isAscending ? 1 : -1;
                    return 0;
                });

                // Re-append sorted rows
                $.each(rows, function(index, row) {
                    $tbody.append(row);
                });
            });
        });
    </script>

    <style>
        .table-hover tbody tr:hover {
            background-color: rgba(52, 152, 219, 0.1);
            cursor: pointer;
        }

        .category-color {
            transition: transform 0.2s;
        }

        .category-row:hover .category-color {
            transform: scale(1.3);
        }

        .btn-group .btn {
            border-radius: 4px !important;
            margin: 0 2px;
        }

        .sort-link {
            text-decoration: none;
            color: inherit;
            user-select: none;
        }

        .sort-link:hover {
            color: #3498db;
        }

        .sort-icon {
            font-size: 0.8em;
            opacity: 0.5;
        }

        .sort-link:hover .sort-icon {
            opacity: 1;
        }

        .bi-arrow-up, .bi-arrow-down {
            opacity: 1 !important;
            color: #3498db;
        }
    </style>
}