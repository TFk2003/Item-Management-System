@model MyAppMVC.Models.Item

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Item Details";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4><i class="bi bi-eye"></i> Item Details</h4>
                    <span class="badge bg-light text-dark">ID: @Model.Id</span>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-4">
                        <div class="category-detail-color me-3"
                             style="background-color:@(GetCategoryColor(Model.Id));width:40px;height:40px;border-radius:50%;"></div>
                        <div>
                            <h2 class="mb-0">@Model.Name</h2>
                            <p class="text-muted mb-0">
                                <i class="bi bi-calendar"></i> Created on @Model.CreatedDate.ToString("MMMM dd, yyyy")
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6><i class="bi bi-info-circle"></i> Basic Information</h6>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-4">Name</dt>
                                        <dd class="col-sm-8">@Model.Name</dd>

                                        <dt class="col-sm-4">Description</dt>
                                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)</dd>

                                        <dt class="col-sm-4">Price</dt>
                                        <dd class="col-sm-8">@(Model.Price == 0 ? "-" : Model.Price.ToString("N2"))</dd>

                                        <dt class="col-sm-4">Stock Quantity</dt>
                                        <dd class="col-sm-8">@(Model.StockQuantity == 0 ? "-" : Model.StockQuantity.ToString("N2"))</dd>

                                        <dt class="col-sm-4">Reorder Level</dt>
                                        <dd class="col-sm-8">@(Model.ReorderLevel == 0 ? "-" : Model.ReorderLevel.ToString("N2"))</dd>

                                        <dt class="col-sm-4">SKU</dt>
                                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.SKU) ? "-" : Model.SKU)</dd>

                                        <dt class="col-sm-4">Manufacturer</dt>
                                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Manufacturer) ? "-" : Model.Manufacturer)</dd>

                                        <dt class="col-sm-4">Category</dt>
                                        <dd class="col-sm-8">@(Model.Category != null ? Model.Category.Name : "-")</dd>

                                        <dt class="col-sm-4">Supplier</dt>
                                        <dd class="col-sm-8">@(Model.Supplier != null ? Model.Supplier.CompanyName : "-")</dd>

                                        <dt class="col-sm-4">Serial Number</dt>
                                        <dd class="col-sm-8">@(Model.SerialNumber != null ? Model.SerialNumber.SerialCode : "-")</dd>

                                        <dt class="col-sm-4">Status</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                                @(Model.IsActive ? "Active" : "Inactive")
                                            </span>
                                        </dd>

                                        <dt class="col-sm-4">Created Date</dt>
                                        <dd class="col-sm-8">@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")</dd>

                                        <dt class="col-sm-4">Updated Date</dt>
                                        <dd class="col-sm-8">@Model.LastUpdated?.ToString("yyyy-MM-dd HH:mm")</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6><i class="bi bi-box"></i> Statistics</h6>
                                </div>
                                <div class="card-body">
                                    <div class="text-center py-3">
                                        <h1 class="display-3 text-info">@(Model.ItemClients?.Count ?? 0)</h1>
                                        <p class="text-muted">Total Clients for this Item</p>
                                    </div>

                                    <div class="progress mb-2" style="height: 10px;">
                                        <div class="progress-bar bg-success" style="width: 70%"></div>
                                    </div>
                                    <small class="text-muted">Inventory coverage</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    @if (Model.ItemClients != null && Model.ItemClients.Any())
                    {
                        <div class="card">
                            <div class="card-header">
                                <h6><i class="bi bi-list"></i>Recent Clients for this Item</h6>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Client Name</th>
                                                <th>Email</th>
                                                <th>Company</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.ItemClients.Take(5))
                                            {
                                                <tr>
                                                    <td>@item.Client.FirstName @item.Client.LastName</td>
                                                    <td>@item.Client.Email</td>
                                                    <td>@item.Client.Company</td>
                                                    <td>
                                                        <span class="badge @(item.Client.IsActive ? "bg-success" : "bg-secondary")">
                                                            @(item.Client.IsActive ? "Active" : "Inactive")
                                                        </span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                @if (Model.ItemClients.Count > 5)
                                {
                                    <div class="text-center mt-2">
                                        <a href="#" class="btn btn-sm btn-outline-info">
                                            View All @Model.ItemClients.Count Clients
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Items
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit Item
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetCategoryColor(int id)
    {
        var colors = new[] { "#3498db", "#2ecc71", "#e74c3c", "#f39c12", "#9b59b6", "#1abc9c", "#d35400", "#34495e" };
        return colors[id % colors.Length];
    }
}