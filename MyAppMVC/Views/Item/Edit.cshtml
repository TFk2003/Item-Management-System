@model MyAppMVC.Models.Item
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	ViewData["Title"] = "Edit Item";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h4><i class="bi bi-pencil"></i> Edit Item</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" lass="alert alert-danger"></div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            Item ID: <strong>@Model.Id</strong> |
                            Created: <strong>@Model.CreatedDate.ToString("MMM dd, yyyy")</strong> |
							Last Modified: <strong>@Model.LastUpdated?.ToString("MMM dd, yyyy")</strong>
                        </div>
                        <div class="row">
							<div class="col-md-8">
								<div class="mb-3">
									<label asp-for="Name" class="form-label">
										<i class="bi bi-tag"></i> Item Name *
									</label>
									<input asp-for="Name" class="form-control" required />
									<span asp-validation-for="Name" class="text-danger"></span>
								</div>
							</div>
							<div class="col-md-4">
								<div class="mb-3">
									<label asp-for="SKU" class="form-label">
										<i class="bi bi-upc-scan"></i> SKU
									</label>
									<input asp-for="SKU" class="form-control" />
									<span asp-validation-for="SKU" class="text-danger"></span>
								</div>
							</div>
                        </div>

						<div class="mb-3">
							<label asp-for="Description" class="form-label">
								<i class="bi bi-text-paragraph"></i> Description
							</label>
							<textarea asp-for="Description" class="form-control" rows="2"></textarea>
							<span asp-validation-for="Description" class="text-danger"></span>
						</div>

						<div class="row">
							<div class="col-md-4">
								<div class="mb-3">
									<label asp-for="Price" class="form-label">
										<i class="bi bi-currency-dollar"></i> Price *
									</label>
									<input asp-for="Price" class="form-control" type="number" step="0.01" min="0.01" required />
									<span asp-validation-for="Price" class="text-danger"></span>
								</div>
							</div>
							<div class="col-md-4">
								<div class="mb-3">
									<label asp-for="StockQuantity" class="form-label">
										<i class="bi bi-box"></i> Current Stock *
									</label>
									<input asp-for="StockQuantity" class="form-control" type="number" min="0" required />
									<span asp-validation-for="StockQuantity" class="text-danger"></span>
								</div>
							</div>
							<div class="col-md-4">
								<div class="mb-3">
									<label asp-for="ReorderLevel" class="form-label">
										<i class="bi bi-exclamation-triangle"></i> Reorder Level
									</label>
									<input asp-for="ReorderLevel" class="form-control" type="number" min="1" />
									<span asp-validation-for="ReorderLevel" class="text-danger"></span>
									<div class="form-text">Alert when stock falls below this level</div>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-6">
								<div class="mb-3">
									<label asp-for="Manufacturer" class="form-label">
										<i class="bi bi-building"></i> Manufacturer
									</label>
									<input asp-for="Manufacturer" class="form-control" />
									<span asp-validation-for="Manufacturer" class="text-danger"></span>
								</div>
							</div>
							<div class="col-md-6">
								<div class="mb-3">
									<label asp-for="CategoryId" class="form-label">
										<i class="bi bi-tags"></i> Category *
									</label>
									<select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select" required>
										<option value="">-- Select Category --</option>
									</select>
									<span asp-validation-for="CategoryId" class="text-danger"></span>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-6">
								<div class="mb-3">
									<label asp-for="SupplierId" class="form-label">
										<i class="bi bi-truck"></i> Supplier
									</label>
									<select asp-for="SupplierId" asp-items="ViewBag.Suppliers" class="form-select">
										<option value="">-- Select Supplier (Optional) --</option>
									</select>
									<span asp-validation-for="SupplierId" class="text-danger"></span>
								</div>
							</div>
							<div class="col-md-6">
								<div class="mb-3">
									<label class="form-label">
										<i class="bi bi-activity"></i> Status
									</label>
									<div class="form-check form-switch">
										<input class="form-check-input" type="checkbox" asp-for="IsActive">
										<label class="form-check-label" asp-for="IsActive">
											Active Item
										</label>
									</div>
									<div class="form-text">Inactive items won't appear in dropdowns</div>
								</div>
							</div>
						</div>
                        <div class="card mb-4">
                            <div class="card-header">
                                <h6><i class="bi bi-upc"></i> Serial Number Information</h6>
                                <small class="text-muted">Optional - For tracked items only</small>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">
                                                <i class="bi bi-qr-code"></i> Serial Code
                                            </label>
                                            <input name="serialCode" class="form-control"
                                                   value="@(Model.SerialNumber?.SerialCode ?? "")"
                                                   placeholder="Enter unique serial code" />
                                            <div class="form-text">Required if adding serial number</div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">
                                                <i class="bi bi-tag"></i> Serial Name
                                            </label>
                                            <input name="serialName" class="form-control"
                                                   value="@(Model.SerialNumber?.Name ?? "")"
                                                   placeholder="Serial number display name" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <label class="form-label">
                                                <i class="bi bi-shield-check"></i> Warranty Information
                                            </label>
                                            <input name="warrantyInfo" class="form-control"
                                                   value="@(Model.SerialNumber?.WarrantyInfo ?? "")"
                                                   placeholder="e.g., 1 Year Limited Warranty" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">
                                                <i class="bi bi-calendar"></i> Manufacture Date
                                            </label>
                                            <input name="manufactureDate" class="form-control" type="date"
                                                   value="@(Model.SerialNumber?.ManufactureDate?.ToString("yyyy-MM-dd") ?? "")" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">
                                                <i class="bi bi-calendar-x"></i> Expiry Date
                                            </label>
                                            <input name="expiryDate" class="form-control" type="date"
                                                   value="@(Model.SerialNumber?.ExpiryDate?.ToString("yyyy-MM-dd") ?? "")" />
                                            <div class="form-text">Leave blank if no expiry</div>
                                        </div>
                                    </div>
                                </div>

                                @if (Model.SerialNumber != null)
                                {
                                    <div class="alert alert-info mt-2">
                                        <i class="bi bi-info-circle"></i>
                                        Serial Number ID: <strong>@Model.SerialNumber.Id</strong>
                                    </div>
                                }
                            </div>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <div>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                    <i class="bi bi-eye"></i> View Details
                                </a>
                                <button type="submit" class="btn btn-warning">
                                    <i class="bi bi-check-circle"></i> Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Toggle serial number fields
            $('#hasSerialNumber').change(function() {
                const isChecked = $(this).is(':checked');
                $('input[name="serialCode"]').prop('required', isChecked);
                $('input[name="serialName"]').prop('required', isChecked);

                // Show/hide validation messages
                if (!isChecked) {
                    $('input[name="serialCode"], input[name="serialName"]').removeClass('is-invalid');
                }
            });

            // Initialize based on current value
            const hasSerialCode = $('input[name="serialCode"]').val().trim() !== '';
            $('#hasSerialNumber').prop('checked', hasSerialCode);
            $('input[name="serialCode"]').prop('required', hasSerialCode);
            $('input[name="serialName"]').prop('required', hasSerialCode);
        });
    </script>
}
