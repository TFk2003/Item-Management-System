@model IEnumerable<MyAppMVC.Models.Item>

@{
	ViewData["Title"] = "Low Stock Alert";
}

<div class="container-fluid">
	<div class="d-flex justify-content-between align-items-center mb-4">
		<div>
			<h1><i class="bi bi-excalmation-triangle text-warning"></i>Low Stock Alert</h1>
			<p class="text-muted">Items below their reorder level need attention</p>
		</div>
		<div class="btn-group">
			<button type="button" class="btn btn-outline-warning" onclick="sendLowStockAlert()">
				<i class="bi bi-bell"></i> Send Alert
			</button>
			<button type="button" class="btn btn-warning dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
				<span class="visually-hidden">Toggle Dropdown</span>
			</button>
			<ul class="dropdown-menu">
				<li><a class="dropdown-item" href="#" onclick="exportLowStockReport()">
						<i class="bi bi-file-earmark-excel"></i> Export Report
				</a></li>
				<li><a class="dropdown-item" href="#" onclick="printLowStock()">
					<i class="bi bi-printer"></i> Print
				</a></li>
				<li><hr class="dropdown-divider"></li>
				<li><a class="dropdown-item" href="#" data-bs-toggle="model" data-bs-target="#settingsModal"
					<i class="bi bi-gear"></i>Alert Settings
				</a></li>
			</ul>
		</div>
	</div>

	@if (TempData["SuccessMessage"] != null)
	{
		<div class="alert alert-success alert-dismissible fade show" role="alert">
			<i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	}

	<div class="row mb-4">
		<div class="col-md-3">
			<div class="card border-warning">
				<div class="card-body text-center">
					<h1 class="display-4 text-warning">@ViewBag.TotalLowStockItems</h1>
					<p class="card-text">Total Low Stock Items</p>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="card border-danger">
				<div class="card-body text-center">
					@{
						var criticalItems = Model.Count(i => i.StockQuantity == 0);
					}
					<h1 class="display-4 text-danger">@criticalItems</h1>
					<p class="card-text">Out of Stock</p>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="card border-info">
				<div class="card-body text-center">
					@{
						var totalReorderNeeded = Model.Sum(i => i.ReorderLevel - i.StockQuantity);
					}
					<h1 class="display-4 text-info">@totalReorderNeeded</h1>
					<p class="card-text">Units to Reorder</p>
				</div>
			</div>
		</div>
		<div class="col-md-3">
			<div class="card border-success">
				<div class="card-body text-center">
					@{
						var estimatedCost = Model.Sum(i => (i.ReorderLevel - i.StockQuantity) * i.Price);
					}
					<h1 class="display-6 text-success">@estimatedCost.ToString("C")</h1>
					<p class="card-text">Estimated Cost</p>
				</div>
			</div>
		</div>
	</div>
	
	<div class="card mb-4">
		<div class="card-body">
			<div class="row g-3">
				<div class="col-md-3">
					<label class="form-label">Stock Level</label>
					<select class="form-select" id="stockFilter" onchange="filterStockLevel()">
						<option value="all">All Low Stock</option>
						<option value="critical">Critical (0-2 units)</option>
						<option value="warning">Warning (3-5 units)</option>
						<option value="low">Low (6-9 units)</option>
					</select>
				</div>
				<div class="col-md-3">
					<label class="form-label">Category</label>
					<select class="form-select" id="categoryFilter" onchange="filterByCategory()">
						<option value="">All Categories</option>
						@foreach (var category in Model.Select(i => i.Category).Distinct().Where(c => c != null))
						{
							<option value="@category.Id">@category.Name</option>
						}
					</select>
				</div>
				<div class="col-md-4">
					<label class="form-label">Custom Threshold</label>
					<div class="input-group">
						<input type="number" class="form-control" id="customThreshold"
							   placeholder="Enter stock threshold" min="0" value="@ViewBag.Threshold">
						<button class="btn btn-outline-secondary" type="button" onclick="applyCustomThreshold()">
							Apply
						</button>
					</div>
				</div>
				<div class="col-md-2 d-flex align-items-end">
					<button class="btn btn-outline-secondary w-100" onclick="resetFilters()">
						<i class="bi bi-x-circle"></i> Reset
					</button>
				</div>
			</div>
		</div>
	</div>

	<div class="card">
		<div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
			<h5 class="mb-0">
				<i class="bi bi-exclamation-triangle"></i> Low Stock Items
				<span class="badge bg-light text-dark ms-2">@Model.Count() items</span>
			</h5>
			<div>
                <button class="btn btn-sm btn-light" onclick="selectAllItems()">
                    <i class="bi bi-check-square"></i> Select All
                </button>
                <button class="btn btn-sm btn-light ms-2" onclick="bulkReorder()">
                    <i class="bi bi-cart-plus"></i> Bulk Reorder
                </button>
            </div>
        </div>
		<div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover" id="lowStockTable">
                        <thead>
                            <tr>
                                <th width="50">
                                    <input type="checkbox" class="form-check-input" id="selectAll">
                                </th>
                                <th>Item</th>
                                <th>Category</th>
                                <th>Current Stock</th>
                                <th>Reorder Level</th>
                                <th>Deficit</th>
                                <th>Price</th>
                                <th>SKU</th>
                                <th>Status</th>
                                <th>Last Updated</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
						<tbody>
                            @foreach (var item in Model)
                            {
                                var deficit = item.ReorderLevel - item.StockQuantity;
                                var stockPercentage = item.ReorderLevel > 0 ? 
                                    (item.StockQuantity * 100) / item.ReorderLevel : 0;
                                var statusClass = item.StockQuantity == 0 ? "critical" :
                                                item.StockQuantity <= 2 ? "danger" :
                                                item.StockQuantity <= 5 ? "warning" : "low";
                                
                                <tr class="low-stock-row" data-stock="@statusClass" data-category="@item.CategoryId">
                                    <td>
                                        <input type="checkbox" class="form-check-input item-checkbox" 
                                               value="@item.Id" data-item-name="@item.Name">
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="me-2">
                                                <i class="bi bi-box"></i>
                                            </div>
                                            <div>
                                                <strong>@item.Name</strong>
                                                @if (!string.IsNullOrEmpty(item.Description))
                                                {
                                                    <br>
                                                    <small class="text-muted">@item.Description.Truncate(50)</small>
                                                }
                                            </div>
                                        </div>
                                    </td>
									<td>
										@if (item.Category != null)
										{
											<span class="badge bg-secondary">@item.Category.Name</span>
										}
										else
										{
											<span class="text-muted">-</span>
										}
								</td>
								<td>
									<div class="d-flex align-items-center">
										<div class="stock-indicator me-2
	                                                 @(statusClass == "critical" ? "critical" :
													   			  statusClass == "danger" ? "danger" :
													   			  statusClass == "warning" ? "warning" : "low")">
											</div>
											<span class="fw-bold
		                                                  @(statusClass == "critical" ? "text-danger" :
																		   statusClass == "danger" ? "text-danger" :
																		   statusClass == "warning" ? "text-warning" : "text-info")">
												@item.StockQuantity
											</span>
										</div>
									</td>
									<td>@item.ReorderLevel</td>
									<td>
										<span class="badge bg-danger">@deficit</span>
									</td>
									<td>@item.Price.ToString("C")</td>
									<td>@(item.SKU ?? "-")</td>
									<td>
										<span class="badge @GetStatusBadgeClass(statusClass)">
											@GetStatusText(statusClass)
										</span>
									</td>
									<td>
										<small class="text-muted">
											@(item.LastUpdated?.ToString("MM/dd/yy") ?? "Never")
										</small>
									</td>
									<td>
										<div class="btn-group btn-group-sm" role="group">
											<a asp-action="Details" asp-route-id="@item.Id"
											   class="btn btn-outline-info" title="View Details">
												<i class="bi bi-eye"></i>
											</a>
											<a asp-action="Reorder" asp-route-id="@item.Id"
											   class="btn btn-outline-warning" title="Reorder">
												<i class="bi bi-cart-plus"></i>
											</a>
											<a asp-action="QuickReorder" asp-route-id="@item.Id"
											   asp-route-quantity="10"
											   class="btn btn-outline-success" title="Quick Reorder (10)">
												<i class="bi bi-lightning"></i>
											</a>
										</div>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
				<div class="row mt-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h6><i class="bi bi-pie-chart"></i> Low Stock Distribution</h6>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-4">
                                        <div class="p-2">
                                            <div class="critical-dot mx-auto mb-2"></div>
                                            <h5>@Model.Count(i => i.StockQuantity == 0)</h5>
                                            <small>Out of Stock</small>
                                        </div>
                                    </div>
									<div class="col-4">
                                        <div class="p-2">
                                            <div class="danger-dot mx-auto mb-2"></div>
                                            <h5>@Model.Count(i => i.StockQuantity > 0 && i.StockQuantity <= 2)</h5>
                                            <small>Critical</small>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="p-2">
                                            <div class="warning-dot mx-auto mb-2"></div>
                                            <h5>@Model.Count(i => i.StockQuantity > 2 && i.StockQuantity <= 5)</h5>
                                            <small>Warning</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
					<div class="col-md-6">
						<div class="card">
							<div class="card-header">
								<h6><i class="bi bi-clock-history"></i> Recent Stock Updates</h6>
							</div>
							<div class="card-body">
								<div class="list-group list-group-flush">
									@foreach (var item in Model.OrderByDescending(i => i.LastUpdated).Take(3))
									{
										<div class="list-group-item">
											<div class="d-flex w-100 justify-content-between">
												<h6 class="mb-1">@item.Name</h6>
												<small>@item.LastUpdated?.ToString("MM/dd")</small>
											</div>
											<p class="mb-1">
												Stock: <span class="badge bg-secondary">@item.StockQuantity</span> |
												Needed: <span class="badge bg-danger">@(item.ReorderLevel - item.StockQuantity)</span>
											</p>
										</div>
									}
								</div>
							</div>
						</div>
					</div>
				</div>
			}
			else
			{
				<div class="text-center py-5">
					<i class="bi bi-check-circle display-1 text-success"></i>
					<h3 class="mt-3 text-success">No Low Stock Items!</h3>
					<p class="text-muted">All items are above their reorder levels.</p>
					<a asp-action="Index" class="btn btn-success mt-2">
						<i class="bi bi-arrow-left"></i> Back to All Items
					</a>
				</div>
			}
		</div>
	</div>
</div>
<div class="modal fade" id="settingsModal" tabindex="-1" aria-labelledby="settingsModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="settingsModalLabel">
					<i class="bi bi-gear"></i> Low Stock Alert Settings
				</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="mb-3">
					<label class="form-label">Default Reorder Quantity</label>
					<input type="number" class="form-control" value="10" min="1">
				</div>
				<div class="mb-3">
					<label class="form-label">Alert Threshold</label>
					<input type="number" class="form-control" value="5" min="1">
					<div class="form-text">Send alerts when stock falls below this level</div>
				</div>
				<div class="mb-3">
					<label class="form-label">Alert Frequency</label>
					<select class="form-select">
						<option>Daily</option>
						<option>Weekly</option>
						<option selected>When stock changes</option>
						<option>Manual only</option>
					</select>
				</div>
				<div class="form-check mb-3">
					<input class="form-check-input" type="checkbox" id="emailAlerts" checked>
					<label class="form-check-label" for="emailAlerts">
						Send email alerts
					</label>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary" onclick="saveSettings()">Save Settings</button>
			</div>
		</div>
	</div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "critical" => "bg-danger",
            "danger" => "bg-danger",
            "warning" => "bg-warning",
            _ => "bg-info"
        };
    }
    
    string GetStatusText(string status)
    {
        return status switch
        {
            "critical" => "Out of Stock",
            "danger" => "Critical",
            "warning" => "Warning",
            _ => "Low"
        };
    }
}

<style>
    .stock-indicator {
        width: 10px;
        height: 10px;
        border-radius: 50%;
    }
    .stock-indicator.critical {
        background-color: #dc3545;
        box-shadow: 0 0 5px #dc3545;
    }
    .stock-indicator.danger {
        background-color: #fd7e14;
        box-shadow: 0 0 5px #fd7e14;
    }
    .stock-indicator.warning {
        background-color: #ffc107;
        box-shadow: 0 0 5px #ffc107;
    }
    .stock-indicator.low {
        background-color: #0dcaf0;
        box-shadow: 0 0 5px #0dcaf0;
    }
    .critical-dot, .danger-dot, .warning-dot {
        width: 20px;
        height: 20px;
        border-radius: 50%;
    }
    .critical-dot {
        background-color: #dc3545;
    }
    .danger-dot {
        background-color: #fd7e14;
    }
    .warning-dot {
        background-color: #ffc107;
    }
    .table-hover tbody tr:hover {
        background-color: rgba(255, 193, 7, 0.1);
    }
</style>

@section Scripts {
	<script>
		$(document).ready(function() {
			// Select all checkbox
			$('#selectAll').change(function() {
				$('.item-checkbox').prop('checked', $(this).is(':checked'));
			});

			// Initialize DataTable
			$('#lowStockTable').DataTable({
				pageLength: 25,
				order: [[3, 'asc']], // Sort by stock (lowest first)
				columnDefs: [
					{ orderable: false, targets: [0, 10] } // Disable sorting for checkbox and actions columns
				]
			});
		});

		function filterStockLevel() {
			const level = $('#stockFilter').val();
			$('.low-stock-row').show();

			if (level !== 'all') {
				$('.low-stock-row').each(function() {
					const rowLevel = $(this).data('stock');
					$(this).toggle(rowLevel === level);
				});
			}
		}

		function filterByCategory() {
			const categoryId = $('#categoryFilter').val();
			$('.low-stock-row').show();

			if (categoryId) {
				$('.low-stock-row').each(function() {
					const rowCategory = $(this).data('category');
					$(this).toggle(rowCategory == categoryId);
				});
			}
		}

		function applyCustomThreshold() {
			const threshold = $('#customThreshold').val();
			if (threshold) {
				window.location.href = '@Url.Action("LowStock")' + '?threshold=' + threshold;
			}
		}

		function resetFilters() {
			window.location.href = '@Url.Action("LowStock")';
		}

		function selectAllItems() {
			$('.item-checkbox').prop('checked', true);
			$('#selectAll').prop('checked', true);
		}

		function bulkReorder() {
			const selectedItems = [];
			$('.item-checkbox:checked').each(function() {
				selectedItems.push({
					id: $(this).val(),
					name: $(this).data('item-name')
				});
			});

			if (selectedItems.length === 0) {
				toastr.warning('Please select items to reorder');
				return;
			}

			if (confirm(`Create purchase order for ${selectedItems.length} items?`)) {
				// In a real app, this would create a purchase order
				toastr.success(`Purchase order created for ${selectedItems.length} items`);

				// Simulate reorder
				setTimeout(() => {
					window.location.reload();
				}, 1500);
			}
		}

		function sendLowStockAlert() {
			const count = @Model.Count();
			if (confirm(`Send low stock alert email for ${count} items?`)) {
				toastr.info('Low stock alert sent to administrators');
			}
		}

		function exportLowStockReport() {
			toastr.info('Low stock report exported successfully');
		}

		function printLowStock() {
			window.print();
		}

		function saveSettings() {
			toastr.success('Settings saved successfully');
			$('#settingsModal').modal('hide');
		}
	</script>
}