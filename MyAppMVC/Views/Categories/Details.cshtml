@model MyAppMVC.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4><i class="bi bi-eye"></i> Category Details</h4>
                    <span class="badge bg-light text-dark">ID: @Model.Id</span>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-4">
                        <div class="category-detail-color me-3"
                             style="background-color:@(GetCategoryColor(Model.Id));width:40px;height:40px;border-radius:50%;"></div>
                        <div>
                            <h2 class="mb-0">@Model.Name</h2>
                            <p class="text-muted mb-0">
                                <i class="bi bi-calendar"></i> Created on @Model.CreatedDate.ToString("MMMM dd, yyyy")
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6><i class="bi bi-info-circle"></i> Basic Information</h6>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-4">Name</dt>
                                        <dd class="col-sm-8">@Model.Name</dd>

                                        <dt class="col-sm-4">Description</dt>
                                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)</dd>

                                        <dt class="col-sm-4">Status</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                                @(Model.IsActive ? "Active" : "Inactive")
                                            </span>
                                        </dd>

                                        <dt class="col-sm-4">Created Date</dt>
                                        <dd class="col-sm-8">@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6><i class="bi bi-box"></i> Statistics</h6>
                                </div>
                                <div class="card-body">
                                    <div class="text-center py-3">
                                        <h1 class="display-3 text-info">@(Model.Items?.Count ?? 0)</h1>
                                        <p class="text-muted">Total Items in this Category</p>
                                    </div>

                                    <div class="progress mb-2" style="height: 10px;">
                                        <div class="progress-bar bg-success" style="width: 70%"></div>
                                    </div>
                                    <small class="text-muted">Inventory coverage</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        <div class="card">
                            <div class="card-header">
                                <h6><i class="bi bi-list"></i>Recent Items in this Category</h6>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Item Name</th>
                                                <th>Price</th>
                                                <th>Stock</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Items.Take(5))
                                            {
                                                <tr>
                                                    <td>@item.Name</td>
                                                    <td>@item.Price.ToString("C")</td>
                                                    <td>
                                                        <span class="badge @(item.StockQuantity > 10 ? "bg-success" : "bg-warning")">
                                                            @item.StockQuantity
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">
                                                            @(item.IsActive ? "Active" : "Inactive")
                                                        </span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                @if (Model.Items.Count > 5)
                                {
                                    <div class="text-center mt-2">
                                        <a href="#" class="btn btn-sm btn-outline-info">
                                            View All @Model.Items.Count Items
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Categories
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit Category
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@functions {
    string GetCategoryColor(int id)
    {
        var colors = new[] { "#3498db", "#2ecc71", "#e74c3c", "#f39c12", "#9b59b6", "#1abc9c", "#d35400", "#34495e" };
        return colors[id % colors.Length];
    }
}