@model MyAppMVC.Models.ItemClient

@{
    ViewData["Title"] = "Create Transaction";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4><i class="bi bi-cart-plus"></i> Create New Transaction</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <!-- Client Selection -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5><i class="bi bi-person"></i> Client Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="ClientId" class="form-label">
                                        <i class="bi bi-person-badge"></i> Select Client *
                                    </label>
                                    <select asp-for="ClientId" class="form-select" id="clientSelect" required>
                                        <option value="">-- Select Client --</option>
                                        @foreach (var client in ViewBag.Clients)
                                        {
                                            <option value="@client.Value">@client.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="ClientId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Item Selection -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5><i class="bi bi-box"></i> Item Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="mb-3">
                                            <label asp-for="ItemId" class="form-label">
                                                <i class="bi bi-tag"></i> Select Item *
                                            </label>
                                            <select asp-for="ItemId" class="form-select" id="itemSelect" required>
                                                <option value="">-- Select Item --</option>
                                                @foreach (var item in ViewBag.Items)
                                                {
                                                    <option value="@item.Value" data-price="@GetItemPrice(item.Value)" 
                                                            data-stock="@GetItemStock(item.Value)">
                                                        @item.Text
                                                    </option>
                                                }
                                            </select>
                                            <span asp-validation-for="ItemId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="Quantity" class="form-label">
                                                <i class="bi bi-123"></i> Quantity *
                                            </label>
                                            <input asp-for="Quantity" class="form-control" id="quantityInput" type="number" min="1" value="1" required 
                                                   onchange="calculateTotal()" />
                                            <span asp-validation-for="Quantity" class="text-danger"></span>
                                            <div class="form-text" id="stockInfo">Available: 0</div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Item Details Preview -->
                                <div class="border rounded p-3 mt-3" id="itemDetails" style="display: none;">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h6 id="itemName">Item Name</h6>
                                            <small class="text-muted" id="itemDescription">Description will appear here</small>
                                        </div>
                                        <div class="col-md-6 text-end">
                                            <div>
                                                <small>Price: <span id="itemPrice" class="fw-bold">$0.00</span></small><br>
                                                <small>Available Stock: <span id="availableStock" class="badge bg-success">0</span></small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Pricing Information -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5><i class="bi bi-cash-stack"></i> Pricing Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="UnitPrice" class="form-label">
                                                <i class="bi bi-currency-dollar"></i> Unit Price *
                                            </label>
                                            <div class="input-group">
                                                <span class="input-group-text">$</span>
                                                <input asp-for="UnitPrice" class="form-control" id="unitPriceInput" type="number" step="0.01" required readonly>
                                            </div>
                                            <span asp-validation-for="UnitPrice" class="text-danger"></span>
                                            <div class="form-text">Sale price per unit</div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label">
                                                <i class="bi bi-calculator"></i> Total Amount
                                            </label>
                                            <div class="input-group">
                                                <span class="input-group-text">$</span>
                                                <input type="text" class="form-control" id="totalAmount" value="0.00" readonly />
                                            </div>
                                            <div class="form-text">Calculated automatically</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Additional Information -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5><i class="bi bi-info-circle"></i> Additional Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="PurchasedDate" class="form-label">
                                                <i class="bi bi-calendar"></i> Purchase Date
                                            </label>
                                            <input asp-for="PurchasedDate" class="form-control" type="datetime-local" 
                                                   value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                                            <span asp-validation-for="PurchasedDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Notes" class="form-label">
                                                <i class="bi bi-chat-text"></i> Notes
                                            </label>
                                            <textarea asp-for="Notes" class="form-control" rows="2" 
                                                      placeholder="Any special notes about this transaction..."></textarea>
                                            <span asp-validation-for="Notes" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Transaction Summary -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h6><i class="bi bi-receipt"></i> Transaction Summary</h6>
                            </div>
                            <div class="card-body row">
                                <div class="col-md-6">
                                    <p class="mb-1"><strong>Client:</strong> <span id="summaryClient">Not selected</span></p>
                                    <p class="mb-1"><strong>Item:</strong> <span id="summaryItem">Not selected</span></p>
                                    <p class="mb-1"><strong>Quantity:</strong> <span id="summaryQuantity">0</span></p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1"><strong>Unit Price:</strong> $<span id="summaryUnitPrice">0.00</span></p>
                                    <p class="mb-1"><strong>Total:</strong> $<span id="summaryTotal">0.00</span></p>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <div>
                                <button type="button" class="btn btn-outline-primary" onclick="clearForm()">
                                    <i class="bi bi-eraser"></i> Clear Form
                                </button>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle"></i> Create Transaction
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {

    string GetItemPrice(string itemId)
    {
        foreach (var item in ViewBag.Items)
        {
            if (item.Value == itemId)
            {
                // Parse price from Display string: "Name (Stock: X, Price: $Y)"
                string display = item.Text;
                var priceMatch = System.Text.RegularExpressions.Regex.Match(display, @"Price: \$(\d+(?:\.\d+)?)");
                if (priceMatch.Success)
                {
                    return priceMatch.Groups[1].Value;
                }
            }
        }
        return "0";
    }

    string GetItemStock(string itemId)
    {
        foreach (var item in ViewBag.Items)
        {
            if (item.Value == itemId)
            {
                // Parse stock from Display string: "Name (Stock: X, Price: $Y)"
                string display = item.Text;
                var stockMatch = System.Text.RegularExpressions.Regex.Match(display, @"Stock: (\d+)");
                if (stockMatch.Success)
                {
                    return stockMatch.Groups[1].Value;
                }
            }
        }
        return "0";
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function updateItemDetails() {
            const itemSelect = document.getElementById('itemSelect');
            const selectedOption = itemSelect.options[itemSelect.selectedIndex];
            const itemPrice = parseFloat(selectedOption.getAttribute('data-price')) || 0;
            const itemStock = parseInt(selectedOption.getAttribute('data-stock')) || 0;
            
            document.getElementById('itemDetails').style.display = selectedOption.value ? 'block' : 'none';
            document.getElementById('itemName').innerText = selectedOption.text;
            document.getElementById('itemPrice').innerText = `$${itemPrice.toFixed(2)}`;
            document.getElementById('availableStock').innerText = itemStock;
            document.getElementById('stockInfo').innerText = `Available: ${itemStock}`;

            const unitPriceInput = document.getElementById('unitPriceInput');
            unitPriceInput.value = itemPrice.toFixed(2);
            
            updateSummary();
            calculateTotal();
        }

        function calculateTotal() {
            const quantity = parseInt(document.getElementById('quantityInput').value) || 0;
            const unitPrice = parseFloat(document.getElementById('unitPriceInput').value) || 0;
            const totalAmount = quantity * unitPrice;
            
            document.getElementById('totalAmount').value = totalAmount.toFixed(2);
            document.getElementById('summaryQuantity').innerText = quantity;
            document.getElementById('summaryUnitPrice').innerText = unitPrice.toFixed(2);
            document.getElementById('summaryTotal').innerText = totalAmount.toFixed(2);
        }

        function updateSummary() {
            const clientSelect = document.getElementById('clientSelect');
            const itemSelect = document.getElementById('itemSelect');
            
            const selectedClient = clientSelect.value ? clientSelect.options[clientSelect.selectedIndex].text : 'Not selected';
            const selectedItem = itemSelect.value ? itemSelect.options[itemSelect.selectedIndex].text : 'Not selected';
            
            document.getElementById('summaryClient').innerText = selectedClient;
            document.getElementById('summaryItem').innerText = selectedItem;
        }

        function clearForm() {
            document.querySelector('form').reset();
            document.getElementById('itemDetails').style.display = 'none';
            document.getElementById('totalAmount').value = '0.00';
            document.getElementById('summaryClient').innerText = 'Not selected';
            document.getElementById('summaryItem').innerText = 'Not selected';
            document.getElementById('summaryQuantity').innerText = '0';
            document.getElementById('summaryUnitPrice').innerText = '0.00';
            document.getElementById('summaryTotal').innerText = '0.00';
        }

        // Initialize event listeners when page loads
        document.addEventListener('DOMContentLoaded', function() {
            const clientSelect = document.getElementById('clientSelect');
            const itemSelect = document.getElementById('itemSelect');
            const quantityInput = document.getElementById('quantityInput');

            // Update summary when client selection changes
            clientSelect.addEventListener('change', updateSummary);

            // Update summary and details when item selection changes
            itemSelect.addEventListener('change', updateItemDetails);

            // Update totals when quantity changes
            quantityInput.addEventListener('input', calculateTotal);
        });
    </script>
}