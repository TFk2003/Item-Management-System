@model IEnumerable<MyAppMVC.Models.ItemClient>

@{
    ViewData["Title"] = "Client Transaction History";
    var client = ViewBag.Client as MyAppMVC.Models.Client;
    var totalSpent = (double)ViewBag.TotalSpent;
    var totalItems = (int)ViewBag.TotalItems;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4><i class="bi bi-person-lines-fill"></i> Client Transaction History</h4>
                </div>
                <div class="card-body">
                    <!-- Client Information -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5><i class="bi bi-person-badge"></i> Client Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <p class="mb-2">
                                        <strong><i class="bi bi-person"></i> Name:</strong><br />
                                        <span class="ms-4">@client.FirstName @client.LastName</span>
                                    </p>
                                </div>
                                <div class="col-md-3">
                                    <p class="mb-2">
                                        <strong><i class="bi bi-building"></i> Company:</strong><br />
                                        <span class="ms-4">@(client.Company ?? "N/A")</span>
                                    </p>
                                </div>
                                <div class="col-md-3">
                                    <p class="mb-2">
                                        <strong><i class="bi bi-envelope"></i> Email:</strong><br />
                                        <span class="ms-4">@client.Email</span>
                                    </p>
                                </div>
                                <div class="col-md-3">
                                    <p class="mb-2">
                                        <strong><i class="bi bi-telephone"></i> Phone:</strong><br />
                                        <span class="ms-4">@(client.PhoneNumber ?? "N/A")</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Statistics Cards -->
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="card text-white bg-primary">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="card-title mb-0">
                                                <i class="bi bi-receipt"></i> Total Transactions
                                            </h6>
                                            <h2 class="mb-0 mt-2">@Model.Count()</h2>
                                        </div>
                                        <div>
                                            <i class="bi bi-receipt-cutoff" style="font-size: 3rem; opacity: 0.3;"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-white bg-success">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="card-title mb-0">
                                                <i class="bi bi-box-seam"></i> Total Items Purchased
                                            </h6>
                                            <h2 class="mb-0 mt-2">@totalItems</h2>
                                        </div>
                                        <div>
                                            <i class="bi bi-boxes" style="font-size: 3rem; opacity: 0.3;"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-white bg-warning">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="card-title mb-0 text-dark">
                                                <i class="bi bi-currency-dollar"></i> Total Spent
                                            </h6>
                                            <h2 class="mb-0 mt-2 text-dark">$@totalSpent.ToString("N2")</h2>
                                        </div>
                                        <div>
                                            <i class="bi bi-cash-stack text-dark" style="font-size: 3rem; opacity: 0.3;"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Transactions Table -->
                    <div class="card">
                        <div class="card-header">
                            <h5><i class="bi bi-list-ul"></i> Transaction Details</h5>
                        </div>
                        <div class="card-body">
                            @if (Model.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th><i class="bi bi-calendar"></i> Date</th>
                                                <th><i class="bi bi-box"></i> Item</th>
                                                <th><i class="bi bi-folder"></i> Category</th>
                                                <th class="text-end"><i class="bi bi-123"></i> Quantity</th>
                                                <th class="text-end"><i class="bi bi-currency-dollar"></i> Unit Price</th>
                                                <th class="text-end"><i class="bi bi-calculator"></i> Total</th>
                                                <th><i class="bi bi-chat-text"></i> Notes</th>
                                                <th class="text-center"><i class="bi bi-gear"></i> Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var transaction in Model)
                                            {
                                                <tr>
                                                    <td>@transaction.PurchasedDate.ToString("MM/dd/yyyy")</td>
                                                    <td>@transaction.Item?.Name</td>
                                                    <td>
                                                        @if (transaction.Item?.Category != null)
                                                        {
                                                            <span class="badge bg-secondary">@transaction.Item.Category.Name</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">N/A</span>
                                                        }
                                                    </td>
                                                    <td class="text-end">@transaction.Quantity</td>
                                                    <td class="text-end">$@transaction.UnitPrice.ToString("N2")</td>
                                                    <td class="text-end fw-bold text-success">$@transaction.TotalPrice.ToString("N2")</td>
                                                    <td>
                                                        @if (!string.IsNullOrEmpty(transaction.Notes))
                                                        {
                                                            <span title="@transaction.Notes">
                                                                @(transaction.Notes.Length > 30 ? transaction.Notes.Substring(0, 30) + "..." : transaction.Notes)
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <div class="btn-group btn-group-sm" role="group">
                                                            <a asp-action="Edit" asp-route-itemId="@transaction.ItemId" asp-route-clientId="@transaction.ClientId" 
                                                               class="btn btn-outline-primary" title="Edit">
                                                                <i class="bi bi-pencil"></i>
                                                            </a>
                                                            <a asp-action="Delete" asp-route-itemId="@transaction.ItemId" asp-route-clientId="@transaction.ClientId" 
                                                               class="btn btn-outline-danger" title="Delete">
                                                                <i class="bi bi-trash"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr class="table-secondary fw-bold">
                                                <td colspan="5" class="text-end">Total:</td>
                                                <td class="text-end text-success">$@totalSpent.ToString("N2")</td>
                                                <td colspan="2"></td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info" role="alert">
                                    <i class="bi bi-info-circle"></i> No transactions found for this client.
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Transactions
                        </a>
                        <a asp-controller="Client" asp-action="Details" asp-route-id="@client.Id" class="btn btn-outline-info">
                            <i class="bi bi-person-circle"></i> View Client Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>